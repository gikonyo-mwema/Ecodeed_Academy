# ===========================================
# Ecodeed Academy Frontend Environment Variables
# ===========================================
# Copy this file to .env.development or .env.production and fill in the values

# ===========================================
# API Configuration
# ===========================================
# Backend API URL (Django backend)
VITE_API_URL=http://localhost:8000

# ===========================================
# Firebase Configuration (for Google OAuth)
# ===========================================
# Get these from Firebase Console: https://console.firebase.google.com/
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=G-your_measurement_id

# ===========================================
# Facebook OAuth Configuration
# ===========================================
# Get these from Facebook Developers: https://developers.facebook.com/
VITE_FACEBOOK_APP_ID=your_facebook_app_id_here

# ===========================================
# Twitter/X OAuth Configuration
# ===========================================
# Get these from Twitter Developer Portal: https://developer.twitter.com/
VITE_TWITTER_CLIENT_ID=your_twitter_client_id_here

# ===========================================
# Cloudinary Configuration (for image uploads)
# ===========================================
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# ===========================================
# Feature Flags (optional)
# ===========================================
# Enable/disable features
VITE_ENABLE_GOOGLE_AUTH=true
VITE_ENABLE_FACEBOOK_AUTH=true
VITE_ENABLE_TWITTER_AUTH=true
